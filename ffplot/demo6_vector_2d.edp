real[int] xx(10), yy(10);

mesh Th = square(15,15);

fespace Vh(Th, P1);

Vh uh=x*x+y*y, vh=-y^2+x^2;

ofstream file ("temp_demo6_vector.txt");
for (int i = 0; i < Th.nt; i++){
  for (int j = 0; j < 3; j++){
    file << Th[i][j].x << ";"
         << Th[i][j].y << ";"
         << uh[][Vh(i,j)] << ";"
         << vh[][Vh(i,j)] << "\n";
  }
}

plot(Th, [uh, vh], value=true, wait=true);

